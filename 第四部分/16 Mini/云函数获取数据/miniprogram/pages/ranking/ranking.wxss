.list{
  margin:15rpx 15rpx 0;
}
.item{
  display: flex;
  padding:20rpx 30rpx;
  background-color: #fff;
  border-radius: 10rpx;
  margin-bottom:15rpx;
}
.poster{
  flex:1;
  width:130rpx;
  height:150rpx;
  margin-right: 20px;
  border-radius: 5rpx;
}
.meta {
  flex:4;
}
.title{
  font-size:36rpx;
  color:#333;
  font-weight: bold;
  margin-bottom:20rpx;
}
.subTitle{
  margin-bottom:15rpx;
}
.subTitle,.directors{
  color:#999;
  font-size: 24rpx;
}
.rating{
  flex:1;
}
.rating text{
  display: inline-block;
  padding:15rpx;
  background-color: #f9705a;
  color:#fff;
  font-size:32rpx;
  border-radius: 10rpx;
}
.hasNoMore{
  padding:20rpx 10rpx;
  background:#333;
}
.hasNoMore text{
  color:#fff;
  font-size:24rpx;
}