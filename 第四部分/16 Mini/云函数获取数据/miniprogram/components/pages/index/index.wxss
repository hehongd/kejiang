.swiper swiper{
  height: 350rpx;
}
.swiper image{
  width: 100%;
  height: 100%;
  display: block;
}

.board{
  margin-top: 20rpx;
  box-sizing: border-box;
}

.board-title{
  font-size:28rpx;
  margin:10rpx 0;
}

.movie-list{
  display: flex;
  align-items: center;
  flex-wrap: wrap;
}
.movie-item{
   width: 166rpx;
   margin: 10rpx;
}
.movie-item image{
   display: block;
   width: 100%;
   height: 230rpx;
}
.movie-item text{
  display: block;
  text-align: center;
  margin-top:15rpx;
  font-size:24rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}